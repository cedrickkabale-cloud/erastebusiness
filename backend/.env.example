# Example environment variables for Eraste Business backend
# Copy to `.env` and set secure values before running in production.

# JWT signing secret (change to a secure random value)
JWT_SECRET=change_this_secret

# Node environment: 'development' or 'production'
NODE_ENV=development

# Backend port
PORT=4000

# Frontend origin allowed for CORS (set to your deployed frontend URL in production)
FRONTEND_ORIGIN=http://localhost:5175

# SQLite database file (relative to backend folder)
DATABASE_FILE=./data.db
